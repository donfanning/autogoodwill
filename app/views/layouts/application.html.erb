<!DOCTYPE html>
<html>
<head>
  <title>Autogoodwill</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= render(:partial => "partials/notify") %>
</head>
<body>
  <div class="wrapper">

    <nav class="navbar navbar-default navbar-static-top">
      <div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" href="index.html">AutoGoodwill</a>
				</div>
        <% if user_signed_in? %>
				<ul class="nav navbar-nav navbar-right">
					<li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user fa-fw"></i> <%= current_user.email %><span class="caret"></span></a>
						<ul class="dropdown-menu">
							<li><a href="#">Profile</a></li>
							<li><a href="/welcome/settings">Settings</a></li>
							<li role="separator" class="divider"></li>
              <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
						</ul>
					</li>
				</ul>
        <% end %>
      </div>
    </nav>

    <%= yield %>

  </div>

</body>
</html>
